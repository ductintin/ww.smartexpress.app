<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ivm"
            type="ww.smartexpress.app.data.model.api.response.Commodity" />

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/itemLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@{!ivm.isSelected ? @drawable/background_commodity : @drawable/background_commodity_selected}"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_7sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/search_location_button"
                android:id="@+id/txtHome"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:textColor="@{!ivm.isSelected ? @color/gray : @color/white}"
                android:text="@{ivm.name}" />
        </LinearLayout>
    </FrameLayout>
</layout>