<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="a"
            type="ww.smartexpress.app.ui.login.LoginActivity" />

        <variable
            name="vm"
            type="ww.smartexpress.app.ui.login.LoginViewModel" />

        <import type="android.view.View" />
        <import type="android.text.InputType"/>
        <import type="android.text.TextUtils" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <FrameLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:onClick="@{()->vm.back()}"
                android:paddingLeft="@dimen/_10ssp"
                android:paddingRight="@dimen/_20ssp"
                android:src="@drawable/ic_icon_back">

            </ImageView>

            <TextView
                android:id="@+id/textView10"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/login_title">

            </TextView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">
            <TextView

                android:id="@+id/textView5"
                style="@style/new_password_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

            </TextView>

            <TextView
                android:id="@+id/textView6"
                style="@style/new_password_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/login_subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

            </TextView>

            <TableLayout
                android:id="@+id/tableLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_marginTop="@dimen/_10sdp">

                <TableRow>

                    <EditText
                        android:id="@+id/edtPW1"
                        style="@style/new_password_text"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@{!TextUtils.isEmpty(vm.pw1) ? @drawable/bg_edt_otp_active : @drawable/bg_edt_otp}"
                        android:inputType="@{vm.isShown ? InputType.TYPE_CLASS_TEXT : (InputType.TYPE_CLASS_TEXT | InputType.TYPE_TEXT_VARIATION_PASSWORD)}"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:text="@={vm.pw1}"
                        android:textAlignment="center"
                        android:afterTextChanged="@{(text)->vm.listen(text)}">

                    </EditText>

                    <EditText
                        android:id="@+id/edtPW2"
                        style="@style/new_password_text"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@{!TextUtils.isEmpty(vm.pw2) ? @drawable/bg_edt_otp_active : @drawable/bg_edt_otp}"
                        android:inputType="@{vm.isShown ? InputType.TYPE_CLASS_TEXT : (InputType.TYPE_CLASS_TEXT | InputType.TYPE_TEXT_VARIATION_PASSWORD)}"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:text="@={vm.pw2}"
                        android:textAlignment="center"
                        android:afterTextChanged="@{(text)->vm.listen(text)}"
                        >

                    </EditText>

                    <EditText
                        android:id="@+id/edtPW3"
                        style="@style/new_password_text"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@{!TextUtils.isEmpty(vm.pw3) ? @drawable/bg_edt_otp_active : @drawable/bg_edt_otp}"
                        android:inputType="@{vm.isShown ? InputType.TYPE_CLASS_TEXT : (InputType.TYPE_CLASS_TEXT | InputType.TYPE_TEXT_VARIATION_PASSWORD)}"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:text="@={vm.pw3}"
                        android:textAlignment="center"
                        android:afterTextChanged="@{(text)->vm.listen(text)}"
                        >

                    </EditText>

                    <EditText
                        android:id="@+id/edtPW4"
                        style="@style/new_password_text"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@{!TextUtils.isEmpty(vm.pw4) ? @drawable/bg_edt_otp_active : @drawable/bg_edt_otp}"
                        android:inputType="@{vm.isShown ? InputType.TYPE_CLASS_TEXT : (InputType.TYPE_CLASS_TEXT | InputType.TYPE_TEXT_VARIATION_PASSWORD)}"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:text="@={vm.pw4}"
                        android:textAlignment="center"
                        android:afterTextChanged="@{(text)->vm.listen(text)}"
                        >

                    </EditText>

                    <EditText
                        android:id="@+id/edtPW5"
                        style="@style/new_password_text"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@{!TextUtils.isEmpty(vm.pw5) ? @drawable/bg_edt_otp_active : @drawable/bg_edt_otp}"
                        android:inputType="@{vm.isShown ? InputType.TYPE_CLASS_TEXT : (InputType.TYPE_CLASS_TEXT | InputType.TYPE_TEXT_VARIATION_PASSWORD)}"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:text="@={vm.pw5}"
                        android:textAlignment="center"
                        android:afterTextChanged="@{(text)->vm.listen(text)}"
                        >

                    </EditText>

                    <EditText
                        android:id="@+id/edtPW6"
                        style="@style/new_password_text"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="wrap_content"
                        android:background="@{!TextUtils.isEmpty(vm.pw6) ? @drawable/bg_edt_otp_active : @drawable/bg_edt_otp}"
                        android:inputType="@{vm.isShown ? InputType.TYPE_CLASS_TEXT : (InputType.TYPE_CLASS_TEXT | InputType.TYPE_TEXT_VARIATION_PASSWORD)}"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:text="@={vm.pw6}"
                        android:textAlignment="center"
                        android:afterTextChanged="@{(text)->vm.listen(text)}"
                        >

                    </EditText>

                </TableRow>


            </TableLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout3"
                android:layout_marginTop="@dimen/_30sdp">

                <TextView
                    style="@style/show_new_password"
                    android:textColor="#424242"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->vm.forgetPassword()}"
                    android:text="@string/forget_pw"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_weight="1"
                    >

                </TextView>

                <TextView
                    style="@style/show_new_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->vm.forgetPassword()}"
                    android:text="@string/signup"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    >

                </TextView>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>