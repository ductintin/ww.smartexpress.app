<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="a"
            type="ww.smartexpress.app.ui.profile.EditProfileActivity" />
        <variable
            name="vm"
            type="ww.smartexpress.app.ui.profile.EditProfileViewModel" />
        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/white"
                android:padding="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:onClick="@{()->vm.back()}"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_20ssp"
                    android:src="@drawable/ic_icon_back">

                </ImageView>

                <TextView
                    style="@style/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/edit_profile"></TextView>

            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_20sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civAvatar"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_gravity="center"
                    android:onClick="@{() -> a.dialogUpLoadAvatar()}"
                    android:src="@{vm.avatar, default=@drawable/user_avatar}"
                    android:elevation="@dimen/_1sdp"
                    app:civ_border_width="@dimen/_2sdp"
                    app:civ_border_color="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/cvContent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cvContent">

                </de.hdodenhof.circleimageview.CircleImageView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    app:cardCornerRadius="@dimen/_24sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:visibility="gone">

                            <TextView
                                style="@style/font_medium_gray_12ssp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fullName">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:text="@string/required_star"
                                android:textColor="@color/red_color">

                            </TextView>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_80sdp"
                            android:backgroundTint="#F8F8F8"
                            android:padding="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="0dp">

                            <EditText
                                android:id="@+id/edtEPFullName"
                                style="@style/information_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:backgroundTint="#F8F8F8"
                                android:maxLines="1"
                                android:text="@={vm.fullName}"
                                android:textColorHint="@color/grey_text">

                            </EditText>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:visibility="gone">

                            <TextView
                                style="@style/font_medium_gray_12ssp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:text="@string/required_star"
                                android:textColor="@color/red_color">

                            </TextView>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:backgroundTint="#F8F8F8"
                            android:padding="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="0dp">

                            <EditText
                                android:id="@+id/edtEPEmail"
                                style="@style/information_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:backgroundTint="#F8F8F8"
                                android:enabled="false"
                                android:maxLines="1"
                                android:text="@={vm.email}">

                            </EditText>
                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:visibility="gone">

                            <TextView
                                style="@style/font_medium_gray_12ssp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/password">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:text="@string/required_star"
                                android:textColor="@color/red_color">

                            </TextView>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:backgroundTint="#F8F8F8"
                            android:padding="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="0dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp">

                                <EditText
                                    android:id="@+id/edtPw"
                                    style="@style/information_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#F8F8F8"
                                    android:inputType="textPassword"
                                    android:maxLength="16"
                                    android:maxLines="1"
                                    android:paddingRight="@dimen/_35sdp"
                                    android:text="@={vm.password}">

                                </EditText>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:onClick="@{(v)->vm.setIsVisibilityPassword()}"
                                    android:src="@{vm.isVisibility ? @drawable/ic_icon_visibility_off : @drawable/ic_icon_visibility}">

                                </ImageView>
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnEPUpdate"
            style="@style/NextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_28sdp"
            android:enabled="@{!TextUtils.isEmpty(vm.fullName) &amp;&amp; !TextUtils.isEmpty(vm.email) &amp;&amp; !TextUtils.isEmpty(vm.password) &amp;&amp; vm.password.length() >=6 }"
            android:onClick="@{(v) -> a.updateAvatar()}"
            android:text="@string/update"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>