<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="a"
            type="ww.smartexpress.app.ui.profile.EditProfileActivity" />
        <variable
            name="vm"
            type="ww.smartexpress.app.ui.profile.EditProfileViewModel" />
        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/white"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:paddingLeft="@dimen/_5ssp"
                        android:paddingRight="@dimen/_20ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:src="@drawable/ic_icon_back"
                        android:onClick="@{()->vm.back()}"
                        >

                    </ImageView>

                    <TextView
                        style="@style/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/edit_profile"></TextView>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:onClick="@{() -> a.getNewAvatar()}"
                        android:id="@+id/civAvatar"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_gravity="center"
                        android:src="@{vm.avatar, default=@drawable/user_avatar}"
                        app:civ_border_width="@dimen/_1sdp"
                        app:civ_border_color="@color/app_color">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fullName"
                            style="@style/roboto_medium_gray_12ssp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/required_star"
                            android:textColor="@color/red_color"
                            android:layout_marginLeft="@dimen/_3sdp">

                        </TextView>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtEPFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/bg_edt"
                        android:hint="@string/fullName_hint"
                        android:maxLines="1"
                        android:text="@={vm.fullName}"
                        android:textColorHint="@color/grey_text"
                        style="@style/information_edit_text">

                    </EditText>


<!--                    <LinearLayout-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="@dimen/_15sdp">-->

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/confirm_password"-->
<!--                            android:fontFamily="@font/roboto_bold"-->
<!--                            android:textSize="@dimen/_12ssp"-->
<!--                            android:textColor="@color/grey_text">-->

<!--                        </TextView>-->

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/required_star"-->
<!--                            android:textColor="@color/red_color">-->

<!--                        </TextView>-->
<!--                    </LinearLayout>-->

<!--                    <EditText-->
<!--                        android:id="@+id/edtEPCPw"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="@dimen/_15sdp"-->
<!--                        android:background="@drawable/bg_edt"-->
<!--                        android:hint="@string/confirm_password"-->
