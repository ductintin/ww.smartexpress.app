<!--                        android:maxLines="1"-->
<!--                        android:textColorHint="@color/grey_text"-->
<!--                        android:fontFamily="@font/roboto_regular"-->
<!--                        android:textSize="@dimen/_12ssp">-->

<!--                    </EditText>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            style="@style/roboto_medium_gray_12ssp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/required_star"
                            android:textColor="@color/red_color"
                            android:layout_marginLeft="@dimen/_3sdp">

                        </TextView>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtEPEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/bg_edt"
                        android:hint="@string/email_hint"
                        android:maxLines="1"
                        android:text="@={vm.email}"
                        android:enabled="false"
                        android:textColorHint="@color/grey_text"
                        style="@style/information_edit_text_disable">

                    </EditText>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/password"
                            style="@style/roboto_medium_gray_12ssp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/required_star"
                            android:textColor="@color/red_color"
                            android:layout_marginLeft="@dimen/_3sdp">

                        </TextView>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp">
                        <EditText
                            android:paddingRight="@dimen/_35sdp"
                            android:id="@+id/edtPw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edt"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textColorHint="@color/grey_text"
                            style="@style/information_edit_text"
                            android:text="@={vm.password}"
                            android:maxLength="16">

                        </EditText>

                        <ImageView
                            android:onClick="@{(v)->vm.setIsVisibilityPassword()}"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@{vm.isVisibility ? @drawable/ic_icon_visibility_off : @drawable/ic_icon_visibility}">

                        </ImageView>
                    </FrameLayout>
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btnEPUpdate"
                android:layout_marginVertical="@dimen/_28sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                style="@style/NextBtn"
                android:enabled="@{!TextUtils.isEmpty(vm.fullName) &amp;&amp; !TextUtils.isEmpty(vm.email) &amp;&amp; !TextUtils.isEmpty(vm.password) &amp;&amp; vm.password.length() >=6 }"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:onClick="@{(v) -> a.updateAvatar()}">

            </Button>
        </LinearLayout>
    </ScrollView>
</layout>