<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ivm"
            type="ww.smartexpress.app.data.model.api.response.BookingResponse" />
        <import type="android.view.View"></import>
        <import type="ww.smartexpress.app.utils.NumberUtils"></import>
        <import type="ww.smartexpress.app.utils.DateUtils"></import>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">
                <TextView
                    style="@style/roboto_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:textColor="#C9424242"
                    android:textSize="@dimen/_7ssp"
                    android:text="@{DateUtils.dateFormat(ivm.createdDate)}"
                    android:maxLines="1">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center|top"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4sdp">

                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="fitCenter"
                        android:src="@{ivm.service.image, default = @drawable/car }">

                    </ImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/roboto_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/trip_from"
                                android:textColor="@color/title_home_page"></TextView>
                            <TextView
                                style="@style/roboto_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:text='@{NumberUtils.formatDoubleNumber(ivm.money) + " Ä‘"}'
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/title_home_page">
                            </TextView>
                        </FrameLayout>

                        <TextView
                            style="@style/roboto_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@{ivm.pickupAddress}"
                            android:textColor="#898A8D"
                            android:textSize="@dimen/_7ssp" />
                        <TextView
                            style="@style/roboto_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@{ivm.destinationAddress}"
                            android:textColor="#898A8D"
                            android:textSize="@dimen/_7ssp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src='@{ivm.state == 300 ? @drawable/ic_icon_status : ivm.state == -100 ? @drawable/ic_icon_status_cancel : @drawable/ic_icon_status_orange}' />
                            <TextView
                                android:id="@+id/txtPrice"
                                style="@style/roboto_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_gravity="left"
                                android:ellipsize="end"
                                android:maxEms="8"
                                android:maxLines="1"
                                android:text='@{ivm.state == 300 ? @string/completed : ivm.state == -100 ? @string/canceled : @string/pending}'
                                android:textColor='@{ivm.state == 300 ? @color/green : ivm.state == -100 ? @color/cancel_color : @color/pending_color}' />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>