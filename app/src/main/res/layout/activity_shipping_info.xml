<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="a"
            type="ww.smartexpress.app.ui.shipping.address.info.ShippingInfoActivity" />
        <variable
            name="vm"
            type="ww.smartexpress.app.ui.shipping.address.info.ShippingInfoViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btnBackBookCar"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/oval_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:elevation="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_icon_back"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_50sdp">


                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:src="@drawable/ic_icon_destination">

                                </ImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/information_edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Đông Hòa"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textSize="@dimen/_12sdp">

                                    </TextView>
                                    <TextView
                                        android:layout_marginVertical="@dimen/_5sdp"
                                        android:text="Bùi Đức Tiên - 0987654321"
                                        style="@style/new_password_subtitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:maxLines="1"
                                        android:ellipsize="end">
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="@dimen/_5sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/line_dashed_border">

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:src="@drawable/ic_icon_gps">

                                </ImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/information_edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Đông Hòa"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textSize="@dimen/_12sdp">

                                    </TextView>
                                    <TextView
                                        android:layout_marginVertical="@dimen/_5sdp"
                                        android:text="Bùi Đức Tiên - 0987654321"
                                        style="@style/new_password_subtitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:maxLines="1"
                                        android:ellipsize="end">
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@color/gray_light">

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:src="@drawable/ic_icon_destination">

                                </ImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <TextView
                                            style="@style/information_edit_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Dịch vụ"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            android:textSize="@dimen/_12sdp">

                                        </TextView>

                                        <TextView
                                            android:text="Đề xuất dựa trên chi tiết món hàng"
                                            style="@style/new_password_subtitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/white"
                                            android:maxLines="1"
                                            android:ellipsize="end">

                                        </TextView>

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_icon_expand">

                                    </ImageView>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@color/gray_light">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:src="@drawable/ic_icon_package">

                                </ImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <TextView
                                            style="@style/information_edit_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Thêm chi tiết món hàng *"
                                            android:textColor="@color/color4"
                                            android:textSize="@dimen/_12sdp"
                                            android:maxLines="1"
                                            android:ellipsize="end">

                                        </TextView>


                                        <TextView
                                            android:text="Đề xuất dựa trên chi tiết món hàng"
                                            style="@style/new_password_subtitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/white"
                                            android:maxLines="1"
                                            android:ellipsize="end">

                                        </TextView>

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_icon_expand">

                                    </ImageView>
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lnSavedLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_icon_mark_full">

                            </ImageView>

                            <TextView
                                style="@style/destination_save"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:text="@string/search_destination_save">

                            </TextView>
                        </LinearLayout>


                        <androidx.core.widget.NestedScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:orientation="horizontal">
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rcLocationType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:listitem="@layout/item_location_type">

                                </androidx.recyclerview.widget.RecyclerView>

                            </LinearLayout>
                        </androidx.core.widget.NestedScrollView>

                    </LinearLayout>
                    <Button
                        android:visibility="gone"
                        style="@style/BookCarButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="@drawable/app_button_background"
                        android:text="@string/welcome_button_continue"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/trip_information_text_bold"
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Áp dụng ưu đãi" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="@dimen/_5sdp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_icon_discount"
                            android:layout_marginRight="@dimen/_5sdp">
                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ưu đãi 30% tối đa 30K"
                            android:maxLines="1"
                            android:ellipsize="end">

                        </TextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_icon_expand"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>




        <LinearLayout
            android:id="@+id/layoutAddCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/background_book_small"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_15sdp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tổng cộng:"
                    android:layout_weight="2"
                    style="@style/new_password_text"
                    android:textSize="@dimen/_12ssp"
                    android:textAlignment="textStart"
                    >

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end">
                    <TextView
                        android:id="@+id/tvTotalDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85.000 đ"
                        android:maxLines="1"
                        android:maxLength="13"
                        android:ellipsize="end"
                        android:textAlignment="textEnd"
                        style="@style/new_password_text"
                        android:textSize="@dimen/_16ssp"
                        android:layout_marginRight="@dimen/_10sdp">

                    </TextView>

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100000 đ"
                        android:maxLines="1"
                        android:maxLength="13"
                        android:ellipsize="end"
                        android:textAlignment="textEnd"
                        style="@style/new_password_text"
                        android:textSize="@dimen/_14ssp">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <Button
                style="@style/BookCarButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/app_button_background"
                android:text="@string/welcome_button_continue"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>
</layout>