<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ivm"
            type="ww.smartexpress.app.data.model.api.response.CartItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.chauthai.swipereveallayout.SwipeRevealLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mode="same_level"
            app:dragEdge="right">

            <!-- Your secondary layout here -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_icon_cart_delete"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"></ImageView>
            </FrameLayout>

            <!-- Your main layout here -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_6sdp"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">
                        <TextView
                            style="@style/font_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:textColor="#C9424242"
                            android:textSize="@dimen/_7ssp"
                            android:text="@string/order_time"
                            android:maxLines="1">
                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:gravity="center|top"
                            android:orientation="horizontal"
                            android:padding="@dimen/_4sdp">

                            <ImageView
                                android:id="@+id/imgProduct"
                                android:layout_width="@dimen/_77sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/product">

                            </ImageView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/font_medium"
                                    android:id="@+id/txtProduct"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:text="@string/drinka_address"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/title_home_page">
                                </TextView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/_3sdp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/imageView13"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_icon_location"/>

                                        <TextView
                                            android:id="@+id/textView4"
                                            style="@style/font_medium"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginRight="@dimen/_3sdp"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:maxLines="1"
                                            android:text="@string/kilomet_value"
                                            android:textColor="#C9424242"
                                            android:textSize="@dimen/_7ssp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imageView14"
                                            android:layout_width="@dimen/_2sdp"
                                            android:layout_height="13dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_icon_status"
                                            app:tint="#C9424242" />

                                        <TextView
                                            style="@style/font_medium"
                                            android:id="@+id/textView3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:text="2 pháº§n"
                                            android:textColor="#C9424242"
                                            android:textSize="@dimen/_7ssp"
                                            android:maxLines="1"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/txtPrice"
                                    style="@style/font_medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:ellipsize="end"
                                    android:maxEms="8"
                                    android:maxLines="1"
                                    android:text='@string/price_trip'
                                    android:textColor="@color/title_home_page"
                                    android:textSize="@dimen/_15ssp"></TextView>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </FrameLayout>

        </com.chauthai.swipereveallayout.SwipeRevealLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>