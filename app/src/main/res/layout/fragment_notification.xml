<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="f"
            type="ww.smartexpress.app.ui.fragment.notification.NotificationFragment" />
        <variable
            name="vm"
            type="ww.smartexpress.app.ui.fragment.notification.NotificationFragmentViewModel" />
        <import type="android.view.View" />
        <import type="android.text.TextUtils" />

    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvTitle"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="@dimen/_10sdp"
                android:maxLines="1"
                android:text="@string/notification_header"
                android:textSize="@dimen/_25ssp"
                android:textAlignment="center">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/bg_color"
                android:id="@+id/rcNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:clipToPadding="false">

            </androidx.recyclerview.widget.RecyclerView>
            <include layout="@layout/item_transaction_empty"
                android:id="@+id/layout_empty"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />
        </LinearLayout>
    </FrameLayout>
</layout>