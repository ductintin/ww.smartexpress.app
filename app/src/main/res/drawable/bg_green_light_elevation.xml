<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- White Top color -->
    <item>

        <shape  android:shape="rectangle">
            <solid android:color="#D1EFF8" />
            <corners android:radius="@dimen/_7sdp"/>
        </shape>

    </item>
    <!-- Bottom 2dp Shadow -->
    <item  android:top="@dimen/_1sdp"
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp"
        android:bottom="@dimen/_1sdp">
        <shape  android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_7sdp"/>
        </shape>
    </item>



</layer-list>